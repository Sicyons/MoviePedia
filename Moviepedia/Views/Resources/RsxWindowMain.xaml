<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Color x:Key="ColorWindowBackgroundDark">#FF111134</Color>
    <Color x:Key="ColorWindowBackgroundLight">#FF2F2F83</Color>

    <LinearGradientBrush x:Key="WindowBackground" EndPoint="0.5,1" MappingMode="RelativeToBoundingBox" StartPoint="0.5,0">
        <GradientStop Color="{StaticResource ColorWindowBackgroundDark}" Offset="0"/>
        <GradientStop Color="{StaticResource ColorWindowBackgroundLight}" Offset="0.5"/>
        <GradientStop Color="{StaticResource ColorWindowBackgroundDark}" Offset="1"/>
    </LinearGradientBrush>
</ResourceDictionary>